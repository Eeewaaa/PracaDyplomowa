@using RealEstate3.Data.ViewModels;
@model RegisterVM;

@{
    ViewData["Title"] = "Zarejestruj nowe konto";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>Zarejestruj nowe konto</h4>
        </p>

        @if(TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">..
            <span><b>Uwaga!</b> - @TempData["Error"]</span>    
            </div>
        }

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="UserName" class="control-label"></label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="EmailAddress" class="control-label"></label>
                        <input asp-for="EmailAddress" class="form-control" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Role" class="control-label"></label>
                        <select asp-for="Role" class="form-control">
                            <option value="Najemca"> Najemca (szukam nieruchomości) </option>
                            <option value="Właściciel"> Właściciel nieruchomości </option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-outline-success float-right" type="submit" value="Zarejestruj" />
                        <a class="btn btn-outline-secondary float-left" asp-controller="Estates" asp-action="Index">Powrót do strony głównej</a>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>