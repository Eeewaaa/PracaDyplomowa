@model RealEstate3.Models.Category

@{
    ViewData["Title"] = "Szczegóły";
}

<h1>Szczegóły</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UpperCategory)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UpperCategory.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SubCategories)
        </dt>
        <dd class="col-sm-10">
             @foreach (var item in ViewBag.SubCategories){
                <p>@item.Name</p>
              }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edytuj</a> |
    <a asp-action="Index">Wróc do listy kategorii</a>
</div>
