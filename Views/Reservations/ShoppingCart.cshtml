@using RealEstate3.Data.ViewModels;
@model ShoppingCartVM

@{
    ViewData["Title"] = "Podsumowanie rezerwacji";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="text-center">
            <h2>Podsumowanie Twoich rezerwacji</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Kategoria</th>
                        <th>Nieruchomość</th>
                        <th>Cena rezerwacji</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model.ShoppingCart.ShoppingCartItems)
                    {
                        <tr>
                            <td class="align-middle">@item.Estate.Category.Name</td>
                            <td class="align-middle">@item.Estate.Title</td>
                            <td class="align-middle">@ViewBag.Price.ToString("c")</td>
                            <td class="align-middle">
                                <a class="text-success" asp-controller="Reservations" asp-action="RemoveFromShoppingCart" asp-route-id="@item.Estate.Id">
                                    <i class="bi bi-cart-dash"></i>
                                </a>

                            </td>
                        </tr>

                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="2"></td>
                        <td><b>Razem:</b></td>
                        <td>
                        @Model.ShoppingCartTotal.ToString("c");
                        </td>
                    </tr>
                </tfoot>
            </table>
            <div class="text-center">
                <div class="btn-group">
                    <a class="btn btn-outline-primary"  asp-action="CompleteReservation">Potwierdź rezerwację</a>
                    <a class="btn btn-outline-success" asp-controller="Estates" asp-action="Index">Dodaj kolejną nieruchomość</a>
                </div>
            </div>
        </div>

    </div>
</div>